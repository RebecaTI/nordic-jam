 <div class="container">
   <div class="is-flex is-flex-direction-column is-align-items-center is-justify-content-center">
     <%= form_with model: @profile do |form| %>
     <h2 class="title mt-4">Styles</h2>
     <div class="mt-4 checkboxes">
       <% Style.order(:name).each do |style| %>
       <div class="mt-4 mr-4">
         <label class="checkbox">
           <%= form.check_box :style_ids, { multiple: true }, style.id, nil %>
           <%= style.name %>
         </label>
       </div>
       <% end %>
     </div>

     <div class="mt-4">
       <%= form.submit "Save", class: "button is-primary" %>
       <%= link_to "Cancel", profile_path(@profile), class: "button is-secondary ml-4" %>
     </div>
     <% end %>
   </div>
 </div>